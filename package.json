{
  "name": "therion",
  "displayName": "Therion",
  "description": "Therion language support.",
  "publisher": "rhystyers",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/rhyst/vscode-therion-language"
  },
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/src/extension",
  "activationEvents": [
    "onLanguage:therion-lang",
    "onCommand:therion.createScrapTemplate"
  ],
  "contributes": {
    "languages": [
      {
        "id": "therion-lang",
        "aliases": [
          "Therion",
          "th"
        ],
        "extensions": [
          ".th",
          ".th2",
          ".thconfig",
          ".thl",
          ".thlayout",
          ".thm",
          ".thmap"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "therion-lang",
        "scopeName": "source.therion",
        "path": "./syntaxes/therion-lang.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "therion.createScrapTemplate",
        "title": "Therion: Create scrap template"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "therion.createScrapTemplate",
          "when": "editorLangId == therion-lang"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^13.7.4",
    "@types/tmp": "^0.1.0",
    "js-yaml": "^3.13.1",
    "typescript": "^3.8.2",
    "vscode": "^1.1.36"
  },
  "scripts": {
    "yaml-to-json": "js-yaml syntaxes/therion-lang.tmLanguage.yaml > syntaxes/therion-lang.tmLanguage.json",
    "build": "tsc && npm run yaml-to-json"
  },
  "dependencies": {
    "tmp": "^0.1.0"
  }
}
